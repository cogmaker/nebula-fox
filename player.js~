(function() {
  var player = new Joy.Sprite({
    x: 10,
    y: 40,
    name: "player",
    src: "assets/cog.png"
  }).bind('load', function() {
    // Change pivot to center
    this.pivot.x = 0,
    this.pivot.y = 0
    this.originalHeight = this.height;
  });

  player.hDir = 1;
  player.vDir = 1;
  player.speed = 3;  
  player.scale.set(cog.config.playerSpriteScale, cog.config.playerSpriteScale);

  cog.player = player;
})();
